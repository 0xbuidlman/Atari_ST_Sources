            .dc.b   "HALLO WELT",$0d,$0a,0
            .EVEN

            TEXT
     Start:
            ;       ---- Aufruf des Macros WrtStr  ----

            ;+WrtStr Msg

            ;       ---- Warte auf Taste, realisiert durch GEMDOS 1 ----

            ;@@cconin

            ;       ---- Beende das Programm durch Gemdos 0 ----

            ;@@pterm0

