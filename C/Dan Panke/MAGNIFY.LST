PROCEDURE magnify(source%,x1%,y1%,x2%,y2%,destination%,dx%,dy%,mx%,my%)
  LOCAL xa%,xb%,xc%,xd%
  DIM xe|(15)
  xe|(1)=2
  xe|(2)=3
  xe|(3)=6
  xe|(4)=4
  xe|(5)=7
  xe|(6)=5
  xe|(7)=8
  xe|(8)=9
  xe|(9)=10
  xe|(10)=11
  xe|(11)=14
  xe|(12)=12
  xe|(13)=15
  xe|(14)=13
  xe|(15)=1
  IF XBIOS(4)=1
    xe|(3)=1
  ENDIF
  xd%=XBIOS(2)
  FOR xa%=y1% TO y2%
    FOR xb%=x1% TO x2%
      ~XBIOS(5,L:source%,L:-1,-1)
      xc%=PTST(xb%,xa%)
      ~XBIOS(5,L:destination%,L:-1,-1)
      DEFFILL xe|(xc%),1
      PBOX dx%+(xb%-x1%)*mx%,dy%+(xa%-y1%)*my%,dx%+(xb%-x1%+1)*mx%-1,dy%+(xa%-y1%+1)*my%-1
    NEXT xb%
  NEXT xa%
  ~XBIOS(5,L:xd%,L:-1,-1)
  ERASE xe|()
RETURN
