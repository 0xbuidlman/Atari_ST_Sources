PROCEDURE fadeout(rate%)
  LOCAL xa%,xb%,xc,xcolor$
  ERASE xcolor|()
  DIM xcolor|(31)
  xcolor$=SPACE$(32)
  FOR xa%=0 TO 31
    xcolor|(xa%)=PEEK(&HFFFF8240+xa%) AND &X1110111
  NEXT xa%
  FOR xa%=rate% DOWNTO 0
    xc=xa%/rate%
    FOR xb%=0 TO 31
      MID$(xcolor$,xb%+1,1)=CHR$(INT(xcolor|(xb%)/16*xc)*16+(xcolor|(xb%) AND 15)*xc)
    NEXT xb%
    ~XBIOS(6,L:V:xcolor$)
    VSYNC
  NEXT xa%
  ERASE xcolor|()
RETURN
