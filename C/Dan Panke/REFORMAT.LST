PROCEDURE reformat_text(txt$,x%,y%,width%)
  LOCAL xa$,xa%,xb%
  DO
    xa$=LEFT$(txt$,width%+1)
    EXIT IF xa$=txt$
    xa%=RINSTR(xa$," ")
    IF xa%
      xb%=1
      xa$=LEFT$(xa$,xa%-1)
    ELSE
      xb%=0
      xa%=width%+1
      xa$=LEFT$(xa$,xa%-1)
    ENDIF
    IF txt$=xa$
      txt$=""
    ELSE
      IF xb%
        txt$=RIGHT$(txt$,LEN(txt$)-LEN(xa$)-1)
      ELSE
        txt$=RIGHT$(txt$,LEN(txt$)-LEN(xa$))
      ENDIF
    ENDIF
    PRINT AT(x%,y%);xa$;
    INC y%
  LOOP
  PRINT AT(x%,y%);xa$;
RETURN
