PROCEDURE lucas(x1&,y1&,x2&,y2&)
  IF x1&>x2&
    SWAP x1&,x2&
    SWAP y1&,y2&
  ENDIF
  dx&=SUB(x2&,x1&)
  dy&=SUB(y2&,y1&)
  adx&=ABS(dx&)
  ady&=ABS(dy&)
  incy&=SGN(dy&)
  IF adx&>ady&
    cumul&=DIV(adx&,2)
    FOR i&=0 TO SUB(adx&,1)
      IF y1&>199
        PLOT x1&,y1&
      ENDIF
      INC x1&
      cumul&=ADD(cumul&,ady&)
      IF cumul&>=adx&
        cumul&=SUB(cumul&,adx&)
        y1&=ADD(y1&,incy&)
      ENDIF
    NEXT i&
  ELSE
    cumul&=DIV(ady&,2)
    FOR i&=0 TO SUB(ady&,1)
      IF y1&>199
        PLOT x1&,y1&
      ENDIF
      y1&=ADD(y1&,incy&)
      cumul&=ADD(cumul&,adx&)
      IF cumul&>=ady&
        cumul&=SUB(cumul&,ady&)
        INC x1&
      ENDIF
    NEXT i&
  ENDIF
RETURN
