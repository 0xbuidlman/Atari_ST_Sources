' SLP_MV / conversion d' un son
' ST REPLAY en son compatible MV16
RESERVE 100000
FILESELECT "\*.spl","",n$
IF n$<>""
  n1$=n$+".mv"
  n2$=LEFT$(n1$,INSTR(n1$,"."))+"mv"
  OPEN "i",#1,n$
  taille%=LOF(#1)
  CLOSE #1
  adr%=MALLOC(taille%)
  IF adr%<>0
    BLOAD n$,adr%
    FOR i=adr% TO adr%+taille%-1
      IF BYTE(i)=0
        byte(i)=1
      ENDIF
    NEXT i
    byte(adr%+taille%)=0
    BSAVE n2$,adr%,taille%+1
    ~MFREE(adr%)
  ENDIF
ENDIF
