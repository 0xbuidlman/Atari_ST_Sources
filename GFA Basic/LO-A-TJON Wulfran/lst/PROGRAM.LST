RESERVE 150000
DIM image%(32255/4)
b%=(VARPTR(image%(0))+255) AND &HFFFF00
a%=XBIOS(3)
e1=MALLOC(32000)
e2=MALLOC(32000)
BLOAD "*.neo",e1-128
SGET f$
REPEAT
  SWAP a%,b%
  VOID XBIOS(5,L:a%,L:b%,-1)
  VSYNC
  SPUT f$
  BMOVE e1+a,e2,32000
  BMOVE e2,XBIOS(3),32000
  INC a
UNTIL INKEY$<>""
VOID MFREE(e1)
VOID MFREE(e2)
