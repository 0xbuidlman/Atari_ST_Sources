SETCOLOR 0,&H777
SETCOLOR 3,&H0
SETCOLOR 15,&H0
VOID XBIOS(5,L:-1,L:-1,W:1)
SETCOLOR 0,&H777
SETCOLOR 1,0
FILESELECT "*.*","",fic$
BLOAD fic$,XBIOS(2)-34
FOR i=XBIOS(2) TO XBIOS(2)+32000 STEP 2
  DPOKE HIMEM-64000+inc%,DPEEK(i)
  DPOKE HIMEM-64000+inc%+2,0
  ADD inc%,4
NEXT i
DO
  c=c-INT(STICK(1)=1 AND c<32000)*1280+INT(STICK(1)=2 AND c>0)*1280
  VOID XBIOS(5,L:-1,L:HIMEM-64000+c,W:-1)
  VSYNC
LOOP
