a=&H78000
CLS
BLOAD "caract_3.neo",XBIOS(3)-128
DIM char$(32)
FOR car=0 TO 16
  GET (car*12)+esp,0,(car*12)+11+esp,23,char$(car)
  esp=esp+2
NEXT car
SUB esp,esp
FOR car=17 TO 25
  GET ((car-17)*12)+esp,26,((car-17)*12)+11+esp,49,char$(car)
  esp=esp+2
NEXT car
CLS
OPEN "O",#2,"carac_1.S"
FOR font=65 TO 90
  PUT 0,0,char$(font-65)
  PRINT #2
  PRINT #2,CHR$(font);":"
  FOR lg=0 TO 23
    PRINT #2," dc.w ";
    FOR ad=0 TO 7 STEP 4
      pk=LPEEK(a+ad+lg*160)
      hpk$=HEX$(pk)
      z=4-LEN(hpk$)
      PRINT #2,"$";
      IF z<>0
        FOR zz=1 TO z
          PRINT #2,"0";
        NEXT zz
      ENDIF
      PRINT #2,hpk$;
      IF ad<5
        PRINT #2,",";
      ENDIF
    NEXT ad
    PRINT #2
  NEXT lg
NEXT font
CLOSE #2
CLS
LOCATE 1,23
PRINT "PRESS ANY KEY..."
VOID INP(2)
END
