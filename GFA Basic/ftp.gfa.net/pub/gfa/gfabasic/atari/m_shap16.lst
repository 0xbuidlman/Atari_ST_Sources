  ' ****************************************************************************
  INLINE m_shap16mc__%,364
  IF BYTE{m_shap16mc__%}=&H48
    IF options__%=0
      ~C:m_shap16mc__%(W:x__%,W:y__%,W:0,W:rows__%,L:screenadr__%,L:bufadr__%,L:memadr__%)
