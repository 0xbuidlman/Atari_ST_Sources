    ELSE
      ~C:m_shap16mc__%(W:x__%,W:y__%,W:1,W:rows__%,L:screenadr__%,L:bufadr__%,L:memadr__%)
    ENDIF
    lib_rv__%=0
  ELSE
    lib_rv__%=-1
  ENDIF
RETURN
