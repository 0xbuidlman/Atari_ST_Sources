'                                       6 Bytes gro룐n Buffer bereitstellen
INLINE pblockadr%,6
'                                     ! Parameterblock erzeugen
BYTE{pblockadr%}=0                    ! Aufl답ung des obersten Abschnitts
BYTE{pblockadr%+1}=40                 ! 40 Zeilen der niedrigsten Aufl답ung
BYTE{pblockadr%+2}=1                  ! Aufl답ung des 2.Abschnitts
BYTE{pblockadr%+3}=60                 ! 60 Zeilen der mittleren Aufl답ung
BYTE{pblockadr%+4}=0                  ! Aufl답ung des 3.Abschnitts
BYTE{pblockadr%+5}=100                ! Restliche Zeilen niedrigste Aufl답ung
'
GOSUB gfa_mres__(1,pblockadr%)
'
GOSUB gfa_setres__(0)                 ! Niedrigste Aufl답ung
PRINT AT(1,1);"Text der niedrigsten Aufl답ung"
'
GOSUB gfa_setres__(1)                 ! Mittlere Aufl답ung
PRINT AT(1,7);"Text der mittleren Aufl답ung"
'
GOSUB gfa_setres__(0)                 ! Wieder niedrigste Aufl답ung
PRINT AT(1,20);"Text der niedrigsten Aufl답ung"
PRINT AT(1,23);"Abbruch mit beliebiger Taste"
~INP(2)                               ! Auf Tastendruck warten
'
GOSUB gfa_mres__(0,0)                 ! Bildschirmteilung aufheben
