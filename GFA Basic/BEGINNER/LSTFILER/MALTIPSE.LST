PROCEDURE mal
  CLS
  ERASE tal%()
  DIM tal%(8)
  FOR i%=1 TO 8
    tal%(i%)=INT(RND*30)+1
    IF i%>1
      FOR j%=1 TO i%-1
        IF tal%(i%)=tal%(j%)
          tal%(i%)=INT(RND*30)+1
        ENDIF
      NEXT j%
    ENDIF
  NEXT i%
  ' sortering
  antal%=8
  FOR i%=1 TO antal%-1
    FOR j%=i%+1 TO antal%
      IF tal%(i%)>tal%(j%)
        SWAP tal%(i%),tal%(j%)
      ENDIF
    NEXT j%
  NEXT i%
  PRINT " "
  PRINT "rÑtt rad Ñr fîljande:"
  FOR i%=1 TO 8
    PRINT tal%(i%)
  NEXT i%
  PRINT "valfri tangent fîr menyn"
  VOID INP(2)
  @meny
RETURN
