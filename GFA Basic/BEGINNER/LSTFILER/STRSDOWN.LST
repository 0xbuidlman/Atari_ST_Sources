INLINE screen1%,32000
physic%=XBIOS(2)
logic%=XBIOS(3)
rez%=XBIOS(4)
screen2%=logic%
noplanes%=10
y1%=50
y2%=100
VSETCOLOR 0,&H0
VSETCOLOR 1,&HFFF ! =&H777 f”r vanlig ST
VSETCOLOR 2,&H700
VSETCOLOR 3,&H70
VSETCOLOR 4,&H7
VSETCOLOR 5,&H770
VSETCOLOR 6,&H77
VSETCOLOR 7,&H707
nostars%=60
DIM x%(nostars%),y%(nostars%),movy%(nostars%)
FOR i%=1 TO nostars%
  x%(i%)=RANDOM(319)
  y%(i%)=RANDOM(y2%)-y1%
  movy%(i%)=i% MOD noplanes%+14
NEXT i%
WHILE INKEY$<>CHR$(27)
  ~XBIOS(5,L:screen1%,L:screen2%,0)
  CLS
  FOR i%=1 TO nostars%
    y%(i%)=y%(i%)+movy%(i%)
    y%(i%)=y%(i%) MOD 319
    PLOT x%(i%),y%(i%)
  NEXT i%
  SWAP screen1%,screen2%
WEND
REM ******* 220 default
~XBIOS(5,L:logic%,L:physic%,L:rez%)
EDIT
