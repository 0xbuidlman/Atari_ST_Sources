  BOX x%,32,x%+30,62
  BOX x%,68,x%+30,98
  LINE x%,47,x%+30,47
  LINE x%+15,32,x%+15,62
  TEXT x%+10,110,z%
  INC z%
NEXT x%
DEFFILL 1,2,8
PBOX 68,32,83,47
PBOX 119,32,134,47
PBOX 140,47,155,62
PBOX 191,47,206,62
'
PBOX 212,32,242,47
PBOX 248,47,278,62
