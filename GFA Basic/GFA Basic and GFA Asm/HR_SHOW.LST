PBOX 479,32,494,47
PBOX 464,47,494,62
PBOX 500,32,515,47
PBOX 500,47,530,62
PBOX 536,32,566,47
PBOX 536,47,551,62
'
PBOX 572,32,602,62
'
GET 33,69,34,70,motif$(0)
'
