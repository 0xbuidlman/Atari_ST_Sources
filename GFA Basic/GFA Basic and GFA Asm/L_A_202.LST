' L_A_202.LST
' LINE_A pour identifier l'adresse en Basic GfA version 2.02
h%=&HA0004E75
h2%=VARPTR(h%)
l_a%=C:h2%()
CLR h%,h2%
'
' dÇterminer le degrÇ de rÇsolution
resolution%=XBIOS(4)
' nombre maxi de colonnes curseur
x_cursor%=DPEEK(l_a%-44)+1
' nombre maxi de lignes curseur
y_cursor%=DPEEK(l_a%-42)+1
' rÇsolution horizontale
x_dim%=DPEEK(l_a%-12)
' facteur de conversion en x
xt=x_dim%/640
' rÇsolution verticale
y_dim%=DPEEK(l_a%-4)
' facteur de conversion en y
yt=y_dim%/400
' nombre de niveaux de bit
bit_pl%=DPEEK(l_a%)
' largeur d'un caractäre
x_caractere%=DPEEK(l_a%+80)
' hauteur d'un caractäre
y_caractere%=DPEEK(l_a%+82)
'
VDISYS 100
' largeur pixel en micromätre
x_mue%=DPEEK(INTOUT+6)
' hauteur pixel en micromätre
y_mue%=DPEEK(INTOUT+8)
' nombre de couleurs affichables simultanÇment
couleur%=DPEEK(INTOUT+26)
' nombre total de couleurs utilisables
coul_total%=DPEEK(INTOUT+78)
'
PRINT " RÇsolution",,resolution%
PRINT " Nombre maxi de colonnes curseur",x_cursor%
PRINT " Nombre maxi de lignes curseur",y_cursor%
PRINT " RÇsolution horizontale",x_dim%
PRINT " Facteur de conversion en X",,xt
PRINT " RÇsolution verticale",y_dim%
PRINT " Facteur de conversion en Y",,yt
PRINT " Nombre de niveaux de bit",bit_pl%
PRINT " Largeur d'un caractäre",x_caractere%
PRINT " Hauteur d'un caractäre",y_caractere%
PRINT " Largeur pixel en micromätre",x_mue%
PRINT " Hauteur pixel en micromätre",y_mue%
PRINT " Nombre de couleurs affichables simultanÇment",couleur%
PRINT " Nombre total de couleurs utilisables",coul_total%
VOID INP(2)
EDIT
