> PROCEDURE print
  @open_workstation
  IF gdos_handle%<>0 THEN
    @setup_workstation
    '
    total%=0
    FOR current_font%=2 TO fonts%
      IF pick%(current_font%)=1 THEN
        INC total%
        print_do
        x&=0
        y&=0
        char&=gdos_first_char%
        exit%=0
        GRAPHMODE 2
        '
        DO
          CONTRL(0)=241  ! V_FTEXT16
          CONTRL(1)=1
          CONTRL(3)=1
          CONTRL(6)=gdos_handle%
          PTSIN(0)=x&*gdos_char_width%
          PTSIN(1)=y&*gdos_char_height%+title_height%
          INTIN(0)=char&
          INTIN(1)=0
          VDISYS
          INC x&
          IF x&=gdos_max_char% THEN
            x&=0
            INC y&
            IF y&>gdos_max_row% THEN
              exit%=1
            ENDIF
          ENDIF
          INC char&
          IF char&>gdos_last_char% THEN
            exit%=1
          ENDIF
        LOOP UNTIL exit%=1
        GRAPHMODE 1
        '
        @eject_page
        '
      ENDIF
    NEXT current_font%
    IF total%=0 AND font%<>1 THEN
      current_font%=font%
      print_do
      x&=0
      y&=0
      char&=gdos_first_char%
      exit%=0
      GRAPHMODE 2
      '
      DO
        CONTRL(0)=241  ! V_FTEXT16
        CONTRL(1)=1
        CONTRL(3)=1
        CONTRL(6)=gdos_handle%
        PTSIN(0)=x&*gdos_char_width%
        PTSIN(1)=y&*gdos_char_height%+title_height%
        INTIN(0)=char&
        INTIN(1)=0
        VDISYS
        INC x&
        IF x&=gdos_max_char% THEN
          x&=0
          INC y&
          IF y&>gdos_max_row% THEN
            exit%=1
          ENDIF
        ENDIF
        INC char&
        IF char&>gdos_last_char% THEN
          exit%=1
        ENDIF
      LOOP UNTIL exit%=1
      GRAPHMODE 1
      '
      @eject_page
      '
    ENDIF
    @close_workstation
  ENDIF
RETURN
