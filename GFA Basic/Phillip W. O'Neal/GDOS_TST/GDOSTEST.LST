> PROCEDURE check_jar
  jar%=LPEEK(1440) ! ADDRESS OF COOKIE JAR
  IF jar% THEN     ! IF JAR PRESENT THEN jar%=ADDRESS OF JAR
    cookie_num%=0
    DO
      cookie%=LPEEK(jar%+cookie_num%*8)
      cookie$=CHR$(SHR(cookie% AND &HFF000000,24))
      cookie$=cookie$+CHR$(SHR(cookie% AND &HFF0000,16))
      cookie$=cookie$+CHR$(SHR(cookie% AND &HFF00,8))
      cookie$=cookie$+CHR$(cookie% AND &HFF)
      IF cookie$="FSMC" THEN
        '
        id%=LPEEK(LPEEK(jar%+cookie_num%*8+4))
        id$=CHR$(SHR(id% AND &HFF000000,24))
        id$=id$+CHR$(SHR(id% AND &HFF0000,16))
        id$=id$+CHR$(SHR(id% AND &HFF00,8))
        id$=id$+CHR$(id% AND &HFF)
        '
      ENDIF
      INC cookie_num%
    LOOP UNTIL cookie%=0
  ENDIF
RETURN
> PROCEDURE font_set
  '
  face%=VQT_NAME(font%,font_name$)
  DEFTEXT ,,,,face%
  '
  CONTRL(0)=236  ! VST_CHARMAP
  CONTRL(1)=0
  CONTRL(3)=1
  CONTRL(6)=my_handle&
  INTIN(0)=0
  VDISYS
  '
  CONTRL(0)=246  ! VST_ARBPT
  CONTRL(1)=0
  CONTRL(3)=1
  CONTRL(6)=my_handle&
  INTIN(0)=points%
  VDISYS
  char_width%=PTSOUT(0)
  char_height%=PTSOUT(1)*1.25
  '
  CONTRL(0)=131  ! VQT_FONTINFO
  CONTRL(1)=0
  CONTRL(3)=0
  CONTRL(6)=my_handle&
  VDISYS
  first_char%=INTOUT(0)
  last_char%=INTOUT(1)
  total_chars%=last_char%+1-first_char%
  '
RETURN
> PROCEDURE show_text
  '
  GRAPHMODE 2
  CONTRL(0)=241  ! V_FTEXT16
  CONTRL(1)=1
  CONTRL(3)=1
  CONTRL(6)=my_handle&
  PTSIN(0)=window_ix%+x&*char_width%+1
  PTSIN(1)=window_iy%+y&*char_height%+char_height%
  INTIN(0)=char&
  INTIN(1)=0
  VDISYS
  GRAPHMODE 1
  '
RETURN
> PROCEDURE dialog
  '
  old_points%=points%
  er%=WIND_UPDATE(1)
  er%=WIND_UPDATE(3)
  view%=font%-1
  IF view%>fonts%-9 THEN
    view%=fonts%-9
    IF view%<0 THEN
      view%=0
    ENDIF
  ENDIF
  @set_text
  '
  pick_done%=0
  '
  ~FORM_DIAL(0,0,0,0,0,main_x%,main_y%,main_w%,main_h%)
  ~OBJC_DRAW(main%,0,2,main_x%,main_y%,main_w%,main_h%)
  DO
    pick_exit%=FORM_DO(main%,0)
    pick_exit%=pick_exit% AND &H7FFF
    '
    SELECT pick_exit%
      '
    CASE b_font_up10%
      IF view%>0 THEN
        view%=view%-10
        IF view%<0 THEN
          view%=0
        ENDIF
        @set_text
        ~OBJC_DRAW(main%,t_font_name%-1,2,main_x%,main_y%,main_w%,main_h%)
      ENDIF
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      ~OBJC_DRAW(main%,pick_exit%,2,main_x%,main_y%,main_w%,main_h%)
      '
    CASE b_font_up%
      IF view%>0 THEN
        view%=view%-1
        IF view%<0 THEN
          view%=0
        ENDIF
        @set_text
        ~OBJC_DRAW(main%,t_font_name%-1,2,main_x%,main_y%,main_w%,main_h%)
      ENDIF
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      ~OBJC_DRAW(main%,pick_exit%,2,main_x%,main_y%,main_w%,main_h%)
      '
    CASE b_font_down%
      IF view%<fonts%-9 THEN
        view%=view%+1
        IF view%>fonts%-9 THEN
          view%=fonts%-9
          IF view%<0 THEN
            view%=0
          ENDIF
        ENDIF
        @set_text
        ~OBJC_DRAW(main%,t_font_name%-1,2,main_x%,main_y%,main_w%,main_h%)
      ENDIF
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      ~OBJC_DRAW(main%,pick_exit%,2,main_x%,main_y%,main_w%,main_h%)
      '
    CASE b_font_down10%
      IF view%<fonts%-9 THEN
        view%=view%+10
        IF view%>fonts%-9 THEN
          view%=fonts%-9
          IF view%<0 THEN
            view%=0
          ENDIF
        ENDIF
        @set_text
        ~OBJC_DRAW(main%,t_font_name%-1,2,main_x%,main_y%,main_w%,main_h%)
      ENDIF
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      ~OBJC_DRAW(main%,pick_exit%,2,main_x%,main_y%,main_w%,main_h%)
      '
    CASE b_points_up%
      points%=points%+4
      @check_points
      CHAR{{OB_SPEC(main%,t_points%)}}=STR$(points%)
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      ~OBJC_DRAW(main%,pick_exit%,2,main_x%,main_y%,main_w%,main_h%)
      ~OBJC_DRAW(main%,t_points%,2,main_x%,main_y%,main_w%,main_h%)
      '
    CASE b_points_bigup%
      points%=points%+16
      @check_points
      CHAR{{OB_SPEC(main%,t_points%)}}=STR$(points%)
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      ~OBJC_DRAW(main%,pick_exit%,2,main_x%,main_y%,main_w%,main_h%)
      ~OBJC_DRAW(main%,t_points%,2,main_x%,main_y%,main_w%,main_h%)
      '
    CASE b_points_down%
      points%=points%-4
      @check_points
      CHAR{{OB_SPEC(main%,t_points%)}}=STR$(points%)
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      ~OBJC_DRAW(main%,pick_exit%,2,main_x%,main_y%,main_w%,main_h%)
      ~OBJC_DRAW(main%,t_points%,2,main_x%,main_y%,main_w%,main_h%)
      '
    CASE b_points_bigdown%
      points%=points%-16
      @check_points
      CHAR{{OB_SPEC(main%,t_points%)}}=STR$(points%)
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      ~OBJC_DRAW(main%,pick_exit%,2,main_x%,main_y%,main_w%,main_h%)
      ~OBJC_DRAW(main%,t_points%,2,main_x%,main_y%,main_w%,main_h%)
      '
    CASE b_ok%
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      pick_done%=1
      points%=VAL(CHAR{{OB_SPEC(main%,t_points%)}})
      @check_points
      @check_font
      @title
      @size_slider
      IF window_view%>last_char% THEN
        window_view%=last_char%
      ENDIF
      @fix_slider
      @update
      '
    CASE b_cancel%
      OB_STATE(main%,pick_exit%)=BCLR(OB_STATE(main%,pick_exit%),0)
      points%=old_points%
      pick_done%=2
      '
    ENDSELECT
    '
  LOOP UNTIL pick_done%>0
  '
  ~FORM_DIAL(3,0,0,0,0,main_x%,main_y%,main_w%,main_h%)
  er%=WIND_UPDATE(2)
  er%=WIND_UPDATE(0)
  '
RETURN
> PROCEDURE set_text
  CHAR{{OB_SPEC(main%,t_points%)}}=STR$(points%)
  FOR x%=0 TO 9
    IF face%(x%+view%+1)>0 THEN
      temp$=STR$(face%(x%+view%+1))
    ELSE
      temp$=""
    ENDIF
    IF LEN(temp$)<5 THEN
      temp$=SPACE$(5-LEN(temp$))+temp$
    ENDIF
    CHAR{{OB_SPEC(main%,t_font_name%+x%)}}=temp$+" "+font_name$(x%+view%+1)
    IF x%+view%+1=font% THEN
      OB_STATE(main%,t_font_name%+x%)=BSET(OB_STATE(main%,t_font_name%+x%),0)
    ELSE
      OB_STATE(main%,t_font_name%+x%)=BCLR(OB_STATE(main%,t_font_name%+x%),0)
    ENDIF
  NEXT x%
RETURN
> PROCEDURE check_points
  IF points%>max_size% THEN
    points%=max_size%
  ENDIF
  IF points%<min_size% THEN
    points%=min_size%
  ENDIF
RETURN
> PROCEDURE check_font
  FOR x%=0 TO 9
    IF BTST(OB_STATE(main%,t_font_name%+x%),0) THEN
      font%=x%+view%+1
      @font_set
    ENDIF
  NEXT x%
  IF font%=0 THEN
    font%=fonts%
    @font_set
  ENDIF
RETURN
> PROCEDURE title_dialog
  er%=WIND_UPDATE(1)
  er%=WIND_UPDATE(3)
  temp_title_font%=title_font%
  view%=title_font%-1
  IF view%>fonts%-9 THEN
    view%=fonts%-9
    IF view%<0 THEN
      view%=0
    ENDIF
  ENDIF
  @set_title_text
  '
  pick_done%=0
  '
  ~FORM_DIAL(0,0,0,0,0,title_x%,title_y%,title_w%,title_h%)
  ~OBJC_DRAW(title%,0,2,title_x%,title_y%,title_w%,title_h%)
  DO
    pick_exit%=FORM_DO(title%,0)
    pick_exit%=pick_exit% AND &H7FFF
    '
    SELECT pick_exit%
      '
    CASE b_title_up10%
      @check_title_font
      IF view%>0 THEN
        view%=view%-10
        IF view%<0 THEN
          view%=0
        ENDIF
        @set_title_text
        ~OBJC_DRAW(title%,t_title_name%-1,2,title_x%,title_y%,title_w%,title_h%)
      ENDIF
      OB_STATE(title%,pick_exit%)=BCLR(OB_STATE(title%,pick_exit%),0)
      ~OBJC_DRAW(title%,pick_exit%,2,title_x%,title_y%,title_w%,title_h%)
      '
    CASE b_title_up%
      @check_title_font
      IF view%>0 THEN
        view%=view%-1
        IF view%<0 THEN
          view%=0
        ENDIF
        @set_title_text
        ~OBJC_DRAW(title%,t_title_name%-1,2,title_x%,title_y%,title_w%,title_h%)
      ENDIF
      OB_STATE(title%,pick_exit%)=BCLR(OB_STATE(title%,pick_exit%),0)
      ~OBJC_DRAW(title%,pick_exit%,2,title_x%,title_y%,title_w%,title_h%)
      '
    CASE b_title_down%
      @check_title_font
      IF view%<fonts%-9 THEN
        view%=view%+1
        IF view%>fonts%-9 THEN
          view%=fonts%-9
          IF view%<0 THEN
            view%=0
          ENDIF
        ENDIF
        @set_title_text
        ~OBJC_DRAW(title%,t_title_name%-1,2,title_x%,title_y%,title_w%,title_h%)
      ENDIF
      OB_STATE(title%,pick_exit%)=BCLR(OB_STATE(title%,pick_exit%),0)
      ~OBJC_DRAW(title%,pick_exit%,2,title_x%,title_y%,title_w%,title_h%)
      '
    CASE b_title_down10%
      @check_title_font
      IF view%<fonts%-9 THEN
        view%=view%+10
        IF view%>fonts%-9 THEN
          view%=fonts%-9
          IF view%<0 THEN
            view%=0
          ENDIF
        ENDIF
        @set_title_text
        ~OBJC_DRAW(title%,t_title_name%-1,2,title_x%,title_y%,title_w%,title_h%)
      ENDIF
      OB_STATE(title%,pick_exit%)=BCLR(OB_STATE(title%,pick_exit%),0)
      ~OBJC_DRAW(title%,pick_exit%,2,title_x%,title_y%,title_w%,title_h%)
      '
    CASE b_title_ok%
      OB_STATE(title%,pick_exit%)=BCLR(OB_STATE(title%,pick_exit%),0)
      pick_done%=1
      FOR x%=0 TO 9
        IF BTST(OB_STATE(title%,t_title_name%+x%),0) THEN
          title_font%=x%+view%+1
        ENDIF
      NEXT x%
      IF title_font%=0 THEN
        title_font%=fonts%
      ENDIF
      '
    CASE b_title_cancel%
      OB_STATE(title%,pick_exit%)=BCLR(OB_STATE(title%,pick_exit%),0)
      pick_done%=2
      '
    ENDSELECT
    '
  LOOP UNTIL pick_done%>0
  '
  ~FORM_DIAL(3,0,0,0,0,title_x%,title_y%,title_w%,title_h%)
  er%=WIND_UPDATE(2)
  er%=WIND_UPDATE(0)
  '
RETURN
