DIM folder$(66),numchapters%(66),words$(26,10000),count%(26)
count%=1
FOR loop%=1 TO 66
  READ folder$(loop%)
NEXT loop%
FOR loop%=1 TO 66
  READ numchapters%(loop%)
NEXT loop%
FOR loop%=1 TO 26
  count%(loop%)=0
NEXT loop%
FOR book%=12 TO 12
  FOR chapter%=1 TO numchapters%(book%)
    @filename
    PRINT filename$
    FOR loop%=1 TO numverses%
      LINE INPUT #1,text$
      text$=UPPER$(text$)
      FOR find%=1 TO LEN(text$)
        temp%=0
        exit%=0
        DO
          IF MID$(text$,find%+temp%,1)>="A" AND MID$(text$,find%+temp%,1)<="Z" THEN
          ELSE
            exit%=1
          ENDIF
          EXIT IF exit%=1
          temp%=temp%+1
        LOOP
        temp$=MID$(text$,find%,temp%)
        IF LEN(temp$)>2 THEN
          t%=ASC(temp$)-64
          flag%=1
          FOR z%=1 TO count%(t%)
            IF temp$=words$(t%,z%) THEN
              flag%=0
              z%=count%(t%)+1
            ENDIF
          NEXT z%
          IF flag%=1 THEN
            words$(t%,count%(t%))=temp$
            count%(t%)=count%(t%)+1
          ENDIF
        ENDIF
        find%=find%+temp%
      NEXT find%
    NEXT loop%
    CLOSE #1
  NEXT chapter%
NEXT book%
CLOSE #1
FOR loop1%=1 TO 26
  file$=drive$+"SEARCH\"+CHR$(loop1%+64)+".WDS"
  OPEN "O",#1,file$
  FOR loop%=1 TO count%(loop1%)
    PRINT #1,words$(loop1%,loop%)
  NEXT loop%
  CLOSE #1
NEXT loop1%
END
PROCEDURE filename
  drive$="N:\"
  folder$=LEFT$(folder$(book%),8)
  IF chapter%>numchapters%(book%) THEN
    chapter%=numchapters%(book%)
  ENDIF
  chapter$=STR$(chapter%)
  IF book%=19 AND chapter%>75 THEN
    folder$="PSALMS2"
  ENDIF
  filename$=drive$+folder$+"\CHPT."+chapter$
  OPEN "I",#1,filename$
  LINE INPUT #1,text$
  numverses%=VAL(text$)
RETURN
