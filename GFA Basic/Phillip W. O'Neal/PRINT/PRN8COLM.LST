CLS
@set_up
@pic_load
FOR lin%=0 TO 199 STEP 8
  byt%=128
  blue$=STRING$(960,0)
  red$=STRING$(960,0)
  yellow$=STRING$(960,0)
  black$=STRING$(960,0)
  FOR pix%=0 TO 7
    FOR row%=0 TO 639
      col%=POINT(row%,lin%+pix%)
      SELECT col%
      CASE 3
        temp%=ASC(MID$(blue$,row%+1,1))
        temp%=temp%+byt%
        MID$(blue$,row%+1,1)=CHR$(temp%)
      CASE 2
        temp%=ASC(MID$(red$,row%+1,1))
        temp%=temp%+byt%
        MID$(red$,row%+1,1)=CHR$(temp%)
      CASE 1
        temp%=ASC(MID$(black$,row%+1,1))
        temp%=temp%+byt%
        MID$(black$,row%+1,1)=CHR$(temp%)
      DEFAULT
      ENDSELECT
    NEXT row%
    byt%=byt%/2
  NEXT pix%
  @dump
NEXT lin%
PROCEDURE dump
  dmp$=lf$
  IF black$<>mt$
    dmp$=dmp$+k$+code$+black$+back$
  ENDIF
  IF blue$<>mt$
    dmp$=dmp$+b$+code$+blue$+back$
  ENDIF
  IF red$<>mt$
    dmp$=dmp$+r$+code$+red$+back$
  ENDIF
  IF yellow$<>mt$
    dmp$=dmp$+y$+code$+yellow$
  ENDIF
  LPRINT dmp$
RETURN
PROCEDURE pic_load
  FOR loop%=0 TO 3
    READ r%,g%,b%
    VSETCOLOR loop%,r%,g%,b%
  NEXT loop%
  FILESELECT #"PRINT WHAT COLOR PICTURE","\*.*","",filename$
  HIDEM
  BLOAD filename$,XBIOS(2)-34
RETURN
PROCEDURE set_up
  mt$=STRING$(960,0)
  lf$=CHR$(27)+CHR$(43)+CHR$(43)
  code$=CHR$(27)+"L"+CHR$(192)+CHR$(3)
  back$=STRING$(80,8)
  k$=CHR$(27)+"r"+CHR$(0)
  r$=CHR$(27)+"r"+CHR$(1)
  b$=CHR$(27)+"r"+CHR$(2)
  y$=CHR$(27)+"r"+CHR$(4)
RETURN
DATA 15,15,15,0,0,0,15,0,0,0,0,15
