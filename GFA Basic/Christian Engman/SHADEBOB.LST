' Tryck space f”r ny figur...
r%=1            ! Size of bob
@colors
@init.shadebob
@main
> PROCEDURE main
  DO
    a=2*RND-1
    b=2*RND-1
    c=2*RND-1
    d=2*RND-1
    v%=0
    CLS
    REPEAT
      bx%=160+100*COSQ(a*v%)*SINQ(b*v%)
      by%=100-100*SINQ(c*v%)*COSQ(d*v%)
      @shadebob(bx%,by%)
      ADD v%,1
      k$=INKEY$
    UNTIL k$<>""
    IF k$=CHR$(27)
      SETCOLOR 0,&H777
      SETCOLOR 15,&H0
      SHOWM
      EDIT
    ENDIF
  LOOP
RETURN
> PROCEDURE colors
  FOR n%=0 TO 7
    SETCOLOR n%,n%,0,0
    SETCOLOR n%+8,7,n%,0
  NEXT n%
RETURN
> PROCEDURE init.shadebob
  boblines%=2*r%
  DIM bobx%(boblines%)
  FOR y%=-r% TO r%
    bobx%(y%+r%)=SQR(MUL(r%,r%)-MUL(y%,y%))
  NEXT y%
RETURN
> PROCEDURE shadebob(bx%,by%)
  LOCAL line%,y%,a%,b%,x%
  FOR line%=0 TO boblines%
    y%=SUB(ADD(by%,line%),r%)
    a%=SUB(bx%,bobx%(line%))
    b%=ADD(bx%,bobx%(line%))
    FOR x%=a% TO b%
      PSET x%,y%,MIN(15,SUCC(PTST(x%,y%)))
    NEXT x%
  NEXT line%
RETURN
