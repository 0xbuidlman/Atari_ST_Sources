' Placera bollen med musen
' Tyv„rr lite buggar kvar (fastnar vid kanterna ibland)
@init.ball
@init
'
vstep%=36
vel=5
a=60
'
DO
  @hit
  @move
  IF x>5 AND x<315 AND y>5 AND y<195
    VSYNC
    SPRITE ball$,x,y
  ENDIF
  '
LOOP UNTIL INP?(2)
EDIT
'
> PROCEDURE init
  HIDEM
  PCIRCLE 160,100,30
  DEFLINE 0,20,2,2
  BOX 2,2,317,197
  LINE 50,50,150,100
  LINE 320,150,200,170
  '
  REPEAT
    MOUSE x,y,k
    VSYNC
    SPRITE ball$,x,y
  UNTIL k
RETURN
> PROCEDURE move
  x=x+vel*(COSQ(a))
  y=y-vel*(SINQ(a))
RETURN
> PROCEDURE hit
  LOCAL v%,a.wall%,a.hit%,hits%
  '
  FOR v%=0 TO 360 STEP vstep%
    sx%=x+12*COSQ(v%)
    sy%=y-12*SINQ(v%)
    IF PTST(sx%,sy%)=15
      ADD a.hit%,v%
      INC hits%
    ENDIF
  NEXT v%
  '
  '
  IF hits%>0
    DIV a.hit%,hits%
    a.wall%=a.hit%+90
    a=(360-a+2*a.wall%) MOD 360
  ENDIF
RETURN
> PROCEDURE init.ball
  RESTORE pattern.ball
  @make.sprite(ball$)
  pattern.ball:
  ' x, y, mode (0=normal 1=XOR), mask-color, sprite-color
  DATA 8,8,0,1,1
  ' mask-pattern
  DATA 0000000110000000
  DATA 0000011111100000
  DATA 0001111111111000
  DATA 0011111111111100
  DATA 0011111111111100
  DATA 0111111111111110
  DATA 0111111111111110
  DATA 1111111111111111
  DATA 1111111111111111
  DATA 0111111111111110
  DATA 0111111111111110
  DATA 0011111111111100
  DATA 0011111111111100
  DATA 0001111111111000
  DATA 0000011111100000
  DATA 0000000110000000
  ' sprite-pattern
  DATA 0000000110000000
  DATA 0000011111100000
  DATA 0001111111111000
  DATA 0011111111111100
  DATA 0011111111111100
  DATA 0111111111111110
  DATA 0111111111111110
  DATA 1111111111111111
  DATA 1111111111111111
  DATA 0111111111111110
  DATA 0111111111111110
  DATA 0011111111111100
  DATA 0011111111111100
  DATA 0001111111111000
  DATA 0000011111100000
  DATA 0000000110000000
RETURN
> PROCEDURE make.sprite(VAR s$)
  LOCAL x&,y&,mode&,mcolor&,scolor&,n&,msk%,spr%,mpat$,spat$,msk$,spr$,pat$
  CLR mpat$,spat$,pat$
  READ x&,y&,mode&,mcolor&,scolor&
  FOR n&=1 TO 16
    READ msk$
    msk%=VAL("&X"+msk$)
    mpat$=mpat$+MKI$(msk%)
  NEXT n&
  FOR n&=1 TO 16
    READ spr$
    spr%=VAL("&X"+spr$)
    spat$=spat$+MKI$(spr%)
  NEXT n&
  FOR n&=1 TO 16
    pat$=pat$+MID$(mpat$,2*n&-1,2)+MID$(spat$,2*n&-1,2)
  NEXT n&
  s$=MKI$(x&)+MKI$(y&)+MKI$(mode&)+MKI$(mcolor&)+MKI$(scolor&)+pat$
RETURN
