' R‚utilisation fichiers coord polaires HTFG en GFA (Hylst (f) as funware)
' nbre de pts  rayon(max=99) / angle en ø  version lignes
' la joie des rotozooms(routine d'explication donc,optimisation=0)
OPEN "i",#99,"h:\bete.dat"
INPUT #99,nbp&
DIM ray|(nbp&),ang&(nbp&)
FOR nbj=0 TO nbp&-2
  INPUT #99,ray|(nbj),ang&(nbj)
  ' ray|(nbj|)=ray|(nbj|)/2
NEXT nbj
CLOSE #99
CLS
r&=0
DIM tcosq(720*3),tsinq(720*3)
FOR an&=0 TO 719*3
  tcosq(an&)=COSQ(an&)
  tsinq(an&)=SINQ(an&)
NEXT an&
prepstab
REPEAT
  FOR ro&=0 TO 359 STEP 4
    scrl%=ABS(SUB(scrl%,1))
    ~XBIOS(5,L:screen%(scrl%),L:screen%(scrp%),-1)
    CLS
    VSYNC
    r&=50*tcosq(ro&)
    IF MOUSEK
      INC h&
      IF h&=319
        h&=0
      ENDIF
      p&=180+179*tcosq(h&)
    ENDIF
    ' g
    FOR t&=1 TO 9
      li(t&-1,t&)
    NEXT t&
    li(9,0)
    ' i
    FOR t&=11 TO 22
      li(t&-1,t&)
    NEXT t&
    li(22,10)
    ' g
    FOR t&=24 TO 37
      li(t&-1,t&)
    NEXT t&
    li(37,23)
    ' a
    FOR t&=39 TO 46
      li(t&-1,t&)
    NEXT t&
    li(46,38)
    ' a
    FOR t&=48 TO 49
      li(t&-1,t&)
    NEXT t&
    li(49,47)
    ' f
    FOR t&=51 TO 59
      li(t&-1,t&)
    NEXT t&
    li(59,50)
    ' u
    FOR t&=61 TO 67
      li(t&-1,t&)
    NEXT t&
    li(67,60)
    ' n
    FOR t&=69 TO 76
      li(t&-1,t&)
    NEXT t&
    li(76,68)
    '   ALINE 160+INT((ray|(nbp&-2)+r&)*tcosq(ang&(nbp&-2)+ABS(ro&-p&))),100+INT((ray|(nbp&-2)+r&)*tsinq(ang&(nbp&-2)+ABS(ro&+p&))),160+INT((ray|(0)+r&)*tcosq(ang&(0)+ABS(ro&-p&))),100+INT((ray|(0)+r&)*tsinq(ang&(0)+ABS(ro&+p&))),1,&X1111111111111111,1
    VSYNC
    scrp%=ABS(SUB(scrp%,1))
    ~XBIOS(5,L:screen%(scrl%),L:screen%(scrp%),-1)
  NEXT ro&
UNTIL ro&>328
' POLYFILL 4,cx(),cy()
endstab
> PROCEDURE prepstab
  ON ERROR GOSUB endstab
  ON BREAK GOSUB endstab
  OPTION BASE 0
  RESERVE FRE(0)-60000
  DIM screen%(2)
  adre%=GEMDOS(&H48,L:32256)
  screen%(0)=INT(adre%/256)*256+256
  screen%(1)=XBIOS(3)
  scrl%=1
  scrp%=1
RETURN
> PROCEDURE endstab
  ~XBIOS(5,L:screen%(1),L:screen%(1),-1)
  ~GEMDOS(&H49,L:adre%)
  EDIT
RETURN
PROCEDURE li(d&,f&)
  x&=160+(INT((ray|(d&)+r&)*tcosq(ang&(d&)+ABS(ro&-p&))))
  '
  y&=100+(INT((ray|(d&)+r&)*tsinq(ang&(d&)+ABS(ro&+p&))))
  '
  x1&=160+(INT((ray|(f&)+r&)*tcosq(ang&(f&)+ABS(ro&-p&))))
  '
  y1&=100+(INT((ray|(f&)+r&)*tsinq(ang&(f&)+ABS(ro&+p&))))
  '
  '  LINE 100+SHR(x&,1),30+SHR(y&,1),100+SHR(x1&,1),30+SHR(y1&,1)
  LINE 100+x&,30+y&,100+x1&,30+y1&
RETURN
