FOR i%=0 TO 30
  PRINT AT(1,1);MID$("ET ENCORE UN PUNCH ...  ",i%,1);AT(5,5);"PLEASE WAIT     ";30-i%;" ";AT(1,4);"LES GFA PUNCHS"
  FOR x%=1 TO 64
    z$=z$+CHR$(PTST(SUB(x%,(MUL(DIV(x%,8),8))),DIV(x%,8)))
    t$=t$+CHR$(PTST(DIV(x%,8),SUB(x%,MUL(DIV(x%,8),8))))
  NEXT x%
NEXT i%
PBOX 0,0,17,17+0*XBIOS(7,0,0)*XBIOS(7,15,15)
SGET e$
DO
  FOR t%=0 TO MUL(30,63) STEP 8
    BMOVE XBIOS(2),SUB(XBIOS(2),1280),13440
    BMOVE ADD(XBIOS(2),13600),ADD(XBIOS(2),13592),18400
    RC_COPY VARPTR(e$),0,24,112,8 TO XBIOS(2),150+50*COSQ(DIV(TIMER,2)),35+30*SINQ(TIMER)
    FOR i%=0 TO 8
      RC_COPY VARPTR(e$),0,0,8,8 TO XBIOS(2),MUL(i%,8),76,ASC(MID$(z$,ADD(i%,t%),1))
      RC_COPY VARPTR(e$),0,0,16,16 TO XBIOS(2),304,ADD(MUL(16,i%),85),ASC(MID$(t$,ADD(i%,t%),1))
    NEXT i%
  NEXT t%
LOOP
