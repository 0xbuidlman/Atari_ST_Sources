a$="DEMO-PUNCH PAR DENEB (ZC) SALUT A TOUS LES PUNCHISTES ET A BIENTOT DANS LA KIDNEY BEAN MEGADEMO (CONTACT 36-15 STMAG BAL DZC)    "
FOR i%=0 TO LEN(a$)+0*XBIOS(7,0,0)*XBIOS(7,15,45)*XBIOS(7,1,&H70)*XBIOS(7,2,&H70)
  PRINT AT(1,1);MID$(a$,i%,1);AT(10,10);"PLEASE WAIT     ";LEN(a$)-i%;" "
  FOR x%=1 TO 64
    IF PTST(x%-(TRUNC(x%/8)*8),(x%/8))
      t$=t$+"*"
    ELSE
      t$=t$+" "
    ENDIF
  NEXT x%
NEXT i%
DO
  FOR ii%=64 TO LEN(t$) STEP 8
    ADD i%,2
    ALINE 240+40*COSQ(i%),200,240+80*ABS(SINQ(i%)),80,1,1,1
    ALINE 80+40*COSQ(i%),200,80+80*-ABS(SINQ(i%)),80,2,1,1
    PRINT AT(17,25);MID$(t$,ii%,8)
  NEXT ii%
LOOP
