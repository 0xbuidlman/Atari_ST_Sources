t$=" VIVE LES GFA PUCHS DANS ST MAG ... DENEB (ZC) "
RESERVE FRE(0)-256000+(0*XBIOS(7,15,0))
d%=TRUNC(GEMDOS(&H48,L:256000)/256*256)
FOR ii=0 TO 5
  FOR y=6 TO 200 STEP 8
    SUB i,0.05
    TEXT (i*60)+80*SIN(i),y,t$
    TEXT (i*60)+80*SIN(i)+376,y,t$+t$
  NEXT y
  BMOVE XBIOS(2),d%+ii*32000,32000
NEXT ii
DO
  FOR i%=0 TO 32000*5 STEP 1280
    VOID XBIOS(5,L:-1,L:d%+i%,W:-1)
    FOR u%=712 TO 755
      SDPOKE &HFF8240,ADD(u%,DIV(TIMER,10))
    NEXT u%
    VSYNC
  NEXT i%
LOOP
