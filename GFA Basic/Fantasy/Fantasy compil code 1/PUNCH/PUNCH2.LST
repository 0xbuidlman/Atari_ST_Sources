SETCOLOR 0,0
SETCOLOR 15,88
DIM a%(3)
s$="16050160050000100319100160-50160050160099160-99100050200-50100-50111055200050100050150150160000000000319000160000160200"
DO
  CLS
  INPUT "CHOISISSEZ LA COURBE DE 0 A 10 :",c%
  INPUT "CHOISISSEZ LA VITESSE DE 0 A 10 :",vi%
  FOR i%=0 TO 3
    a%(i%)=VAL(MID$(s$,(c%*12)+(i%*3),3))
  NEXT i%
  DO
    x%=160+200*COSQ(q)
    y%=100+99*SINQ(q)
    ADD q,vi%
    CURVE a%(0)+a%(1)*COSQ(q),199,x%,y%,-x%+319,-y%+199,a%(2)+a%(3)*COSQ(q),199
    PRINT
  LOOP UNTIL INP(-2)
LOOP
