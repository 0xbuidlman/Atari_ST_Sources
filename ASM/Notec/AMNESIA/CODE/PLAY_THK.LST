INLINE pak%,402
FILESELECT "a:\musix\*.th_","",n$
OPEN "i",#1,n$
l=LOF(#1)
a$=SPACE$(l)
BGET #1,V:a$,l
CLOSE
ice$=MID$(a$,1,4)
FOR x=5 TO 8
  IF MID$(a$,x,1)<>CHR$(0)
    len_pack$=len_pack$+HEX$(ASC(MID$(a$,x,1)))
  ENDIF
NEXT x
FOR x=9 TO 12
  IF MID$(a$,x,1)<>CHR$(0)
    len_depack$=len_depack$+HEX$(ASC(MID$(a$,x,1)))
  ENDIF
NEXT x
.
IF ice$="ICE!"
  b$=SPACE$(len_depack%)
  ~C:pak%(L:V:a$,L:V:b$)
  ~XBIOS(&H26,L:V:b$)
  SLPOKE &H4D2,V:b$+8
  @demo
  SLPOKE &H4D2,0
  ~XBIOS(&H26,L:V:b$+8)
ENDIF
> PROCEDURE demo
  DEFFILL 1
  PBOX 0,0,106,200
  DEFFILL 2
  PBOX 107,0,107+106,200
  DEFFILL 3
  PBOX 107+107,0,320,200
  c1=PTST(0,0)
  c2=PTST(160,0)
  c3=PTST(310,0)
  DO
    IF aa<>a OR bb<>b OR cc<>c
      a=PEEK(V:b$+2512)
      b=PEEK(V:b$+2513)
      c=PEEK(V:b$+2514)
    ENDIF
    aa=a
    bb=b
    cc=c
    VSETCOLOR c1,0,0,aa
    VSETCOLOR c2,bb,bb,bb
    VSETCOLOR c3,cc,0,0
    DEC aa
    DEC bb
    DEC cc
    IF aa<0
      aa=0
    ENDIF
    IF bb<0
      bb=0
    ENDIF
    IF cc<0
      cc=0
    ENDIF
    VSYNC
  LOOP UNTIL PEEK(&HFFFFFC02)=57
RETURN
