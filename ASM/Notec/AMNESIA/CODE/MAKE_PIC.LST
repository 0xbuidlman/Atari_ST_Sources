OUT 4,18
HIDEM
OPEN "o",#1,"a:\graphx\fractal.pi1"
CLOSE
OPEN "o",#1,"a:\graphx\fractal.pal"
CLOSE
pal$=SPACE$(32)
FOR n=0 TO 9
  CLS
  LOCATE 1,19
  PRINT "IMAGE : ";n
  OPEN "i",#1,"a:\graphx\frac"+STR$(n)+".pi1"
  SEEK #1,2
  BGET #1,V:pal$,32
  BGET #1,XBIOS(2),16000
  CLOSE #1
  IF n<4
    LOCATE 1,22
    PRINT "PAL:";n
    OPEN "a",#2,"a:\graphx\fractal.pal"
    BPUT #2,V:pal$,32
    CLOSE #2
  ENDIF
  OPEN "a",#1,"a:\graphx\fractal.pi1"
  FOR y=0 TO 99
    BPUT #1,XBIOS(2)+y*160,80
    LOCATE 1,20
    PRINT "COPY:";y;"/99"
  NEXT y
  CLOSE #1
NEXT n
OUT 4,8
