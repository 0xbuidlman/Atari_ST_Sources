INLINE pak%,402
FILESELECT "a:\musix\*.th_","",n$
OPEN "i",#1,n$
l=LOF(#1)
a$=SPACE$(l)
BGET #1,V:a$,l
CLOSE
ice$=MID$(a$,1,4)
FOR x=5 TO 8
  IF MID$(a$,x,1)<>CHR$(0)
    len_pack$=len_pack$+HEX$(ASC(MID$(a$,x,1)))
  ENDIF
NEXT x
FOR x=9 TO 12
  IF MID$(a$,x,1)<>CHR$(0)
    len_depack$=len_depack$+HEX$(ASC(MID$(a$,x,1)))
  ENDIF
NEXT x
.
IF ice$="ICE!"
  b$=SPACE$(len_depack%)
  ~C:pak%(L:V:a$,L:V:b$)
  ~XBIOS(&H26,L:V:b$)
  SLPOKE &H4D2,V:b$+8
  @demo
  SLPOKE &H4D2,0
  ~XBIOS(&H26,L:V:b$+8)
ENDIF
PROCEDURE demo
  DEFFILL 1
  PBOX 0,0,106,200
  DEFFILL 2
  PBOX 107,0,107+106,200
  DEFFILL 3
  PBOX 107+107,0,320,200
  SGET e1$
  c1=PTST(0,0)
  c2=PTST(160,0)
  c3=PTST(310,0)
  COLOR 0
  FOR y=0 TO 199 STEP 2
    LINE 0,y,319,y
  NEXT y
  SGET e2$
  FOR x=0 TO 319 STEP 2
    LINE x,0,x,199
  NEXT x
  SGET e3$
  DO
    a=PEEK(V:b$+2512)
    b=PEEK(V:b$+2513)
    c=PEEK(V:b$+2514)
    VSETCOLOR c1,0,0,a
    VSETCOLOR c2,b,b,b
    VSETCOLOR c3,c,0,0
    VSYNC
    INC t
    IF t=20
      t=0
      nb=RANDOM(3)
      IF nb=0
        SPUT e1$
      ELSE IF nb=1
        SPUT e2$
      ELSE IF nb=2
        SPUT e3$
      ENDIF
    ENDIF
  LOOP UNTIL PEEK(&HFFFFFC02)=57
RETURN
