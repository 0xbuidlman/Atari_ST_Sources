 DATA

objet_application:	; ;METHODLIST_PTR;NAME;MENU_SPEC_PTR;WPROPERTIES;SHORTCUTLIST_PTR
	GWVA_WAPP_STRUCT_HEAD	objet_application_events,'_App',structure_menu_principal,GWVA_WIND_MASK_AMENU

		; PROPERTIES,REG_NAME,ACC_NAME,RSC_INFO;TSR_SIZE
	GWVA_WAPP_STRUCT_BASE	0,objet_application_nom,objet_application_nom_menu,objet_application_rsc
	GWVA_WAPP_STRUCT_BACKGROUND	; ;BACKGROUND_WIND_PTR

objet_application_events:		; METHOD,ROUTINE;CLASS;PROPERTIES
	GWVA_OBJ_STRUCT_METHOD	GWVA_METHOD_OPENED,my_inits_opened
	GWVA_OBJ_STRUCT_METHOD	GWVA_METHOD_ON_DELETE,app_on_delete
	GWVA_OBJ_STRUCT_METHOD	AP_TERM,app_term
	GWVA_OBJ_STRUCT_METHOD_END_LIST

structure_menu_principal:
		; TREE;NAME;PROPERTIES
	GWVA_MENU_STRUCT_HEAD	MENU_PRINCIPAL,'Menu'
		; ;LIST_ATTACH_PTR;SCROLL_INDEX;PROPERTIES
	GWVA_MENU_STRUCT_BASE	liste_sous_menus

	; MENU_STRUCT_START_LIST
				; IDX,ROUTINE;SHORTCUT
	GWVA_MENU_STRUCT_MNULIST INFO_MENU,menu_information
	GWVA_NEXT_SHORTCUT_CONTROL 'q'
	GWVA_MENU_STRUCT_MNULIST ACTIONS_QUIT,menu_quit
	GWVA_NEXT_SHORTCUT_CONTROL 'i'
	GWVA_MENU_STRUCT_MNULIST DATA_INT_FILE,integrate_bs
	GWVA_NEXT_SHORTCUT_CONTROL 'a'
	GWVA_MENU_STRUCT_MNULIST DATA_ARCHIVE,archiver
	GWVA_NEXT_SHORTCUT_CONTROL 'r'
	GWVA_MENU_STRUCT_MNULIST SPECIAL_RANDOM,serie
	GWVA_NEXT_SHORTCUT_CONTROL 'd'
	GWVA_MENU_STRUCT_MNULIST SPECIAL_DUMP,dump
	GWVA_NEXT_SHORTCUT_CONTROL 'v'
	GWVA_MENU_STRUCT_MNULIST ACTIONS_VALIDATE,valide
	GWVA_NEXT_SHORTCUT_CONTROL 'k'
	GWVA_MENU_STRUCT_MNULIST ACTIONS_KILL,tuer
	GWVA_NEXT_SHORTCUT_CONTROL 'u'
	GWVA_MENU_STRUCT_MNULIST ACTIONS_UPDATE,ecrit
	GWVA_NEXT_SHORTCUT_CONTROL 'l'
	GWVA_MENU_STRUCT_MNULIST ACTIONS_LOAD,menu_load
	GWVA_NEXT_SHORTCUT_CONTROL 'w'
	GWVA_MENU_STRUCT_MNULIST ACTIONS_WORKINGD,chgt_lecteur
	GWVA_NEXT_SHORTCUT_CONTROL 't'
	GWVA_MENU_STRUCT_MNULIST ACTIONS_TESTVIR,test_vir
	GWVA_MENU_STRUCT_MNULIST SPECIAL_DEFINE_O,ask_check

	GWVA_MENU_STRUCT_MNULIST_END

liste_sous_menus:	dc.l structure_sous_menu_integration
		dc.l 0

structure_sous_menu_integration:
	; TREE_OBJ_ATTACHED,OBJ_IDX_ATTACHED,TREE,INDEX,WHICH_ALIGN;MENU_SCROLL
	GWVA_SUBMENU_STRUCT_DEF	MENU_PRINCIPAL,DATA_INT_PREDEF,ATTACHED_MENU,MNU_ATCH_BS,DATA_INTEGRATEGW

	GWVA_NEXT_SHORTCUT_CONTROL 'g'
	GWVA_MENU_STRUCT_MNULIST DATA_INTEGRATEGW,maxiboot
	GWVA_MENU_STRUCT_MNULIST INTEGRATE_IBM,integrate_from_mem
	GWVA_MENU_STRUCT_MNULIST INTEGRATE_UNIX,integrate_from_mem
	GWVA_MENU_STRUCT_MNULIST INTEGRATE_WAX,integrate_from_mem
	GWVA_MENU_STRUCT_MNULIST INTEGRATE_JEREMY,integrate_from_mem
	GWVA_MENU_STRUCT_MNULIST INTEGRATE_PLASMA,integrate_from_mem
	GWVA_MENU_STRUCT_MNULIST_END

objet_application_nom:		dc.b 'BOOTEDI2',0
objet_application_nom_menu:	dc.b '  Boot tools  ',0
 even
	ifnd OPT_FULL_PATHNAMES
objet_application_rsc:	dc.b 'bootedi2.rsc',0
	else
objet_application_rsc:	dc.b 'd:\assemble\sources.v45\bootedi2\bootedi2.rsc',0
	endc
 even

