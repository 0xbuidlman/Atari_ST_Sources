flag%=0
FOR l%=-1 TO 1      ! le pilier va boucher une entr‚e ?
  FOR k%=-1 TO 1
    IF l%(ADD(a%,k%),ADD(b%,l%))=1
      INC flag%
    ENDIF
  NEXT k%
NEXT l%
IF flag%<2
  l%(a%,b%)=1       ! Pilier !
  DEFFILL 1
  PBOX MUL(a%,3),MUL(b%,3),ADD(MUL(a%,3),2),ADD(MUL(b%,3),2)
ELSE    ! Sinon on vide
  l%(a%,b%)=0
  DEFFILL 0
  PBOX MUL(a%,3),MUL(b%,3),ADD(MUL(a%,3),2),ADD(MUL(b%,3),2)
  cx%(ca%)=a%
  cy%(ca%)=b%
  INC ca%
ENDIF
