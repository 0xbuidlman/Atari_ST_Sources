name_app:		dc.b 'HARDSAF2',0
name_menu:		dc.b '  Hardsafe 2 ',0

	ifnd OPT_FULL_PATHNAMES
name_rsc:		dc.b 'hardsaf2.rsc',0
	else
name_rsc:		dc.b 'd:\assemble\sources.v45\hardsafe.2\hardsaf2.rsc',0
	endc
