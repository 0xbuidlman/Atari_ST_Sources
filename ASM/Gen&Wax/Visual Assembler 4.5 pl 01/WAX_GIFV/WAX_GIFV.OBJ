 DATA

objet_application:	; ;METHODLIST_PTR;NAME;MENU_SPEC_PTR;WPROPERTIES;SHORTCUTLIST_PTR
	GWVA_WAPP_STRUCT_HEAD	objet_application_events,'_App',structure_menu_principal

		; PROPERTIES,REG_NAME,ACC_NAME,RSC_INFO;TSR_SIZE
	GWVA_WAPP_STRUCT_BASE	0,name_app,name_menu,name_rsc
	GWVA_WAPP_STRUCT_BACKGROUND 	; ;BACKGROUND_WIND_PTR

objet_application_events:		; METHOD,ROUTINE;CLASS;PROPERTIES
	GWVA_OBJ_STRUCT_METHOD	GWVA_METHOD_CREATED,my_inits_created
	GWVA_OBJ_STRUCT_METHOD	GWVA_METHOD_OPENED,my_inits_opened
	GWVA_OBJ_STRUCT_METHOD	AC_OPEN,acc_open
	GWVA_OBJ_STRUCT_METHOD	AC_CLOSE,acc_close
	GWVA_OBJ_STRUCT_METHOD	AP_TERM,app_term
	GWVA_OBJ_STRUCT_METHOD	VA_START,va_start_message
	GWVA_OBJ_STRUCT_METHOD_END_LIST

structure_menu_principal:
		; TREE;NAME;PROPERTIES
	GWVA_MENU_STRUCT_HEAD	MENU_PRINCIPAL,'Menu'
		; ;LIST_ATTACH_PTR;SCROLL_INDEX;PROPERTIES
	GWVA_MENU_STRUCT_BASE

	; MENU_STRUCT_START_LIST
				; IDX,ROUTINE;SHORTCUT
	GWVA_NEXT_SHORTCUT_CONTROL 'i'
	GWVA_MENU_STRUCT_MNULIST MNU_DESK_INFO,open_wind_info
	GWVA_NEXT_SHORTCUT_CONTROL 'o'
	GWVA_MENU_STRUCT_MNULIST MNU_FILE_OPEN,menu_open
	GWVA_NEXT_SHORTCUT_CONTROL 's'
	GWVA_MENU_STRUCT_MNULIST MNU_SAVE_PALETTE,menu_save_palette
	GWVA_NEXT_SHORTCUT_CONTROL 'q'
	GWVA_MENU_STRUCT_MNULIST MNU_FILE_QUIT,routine_menu_quit
	GWVA_MENU_STRUCT_MNULIST_END

name_app:		dc.b 'WAX_GIFV',0
name_menu:		dc.b '  Wax gif-View  ',0

	ifnd OPT_FULL_PATHNAMES
name_rsc:	dc.b 'wax_gifv.rsc',0
	else
name_rsc:	dc.b 'd:\assemble\sources.v45\wax_gifv\wax_gifv.rsc',0
	endc
 even

