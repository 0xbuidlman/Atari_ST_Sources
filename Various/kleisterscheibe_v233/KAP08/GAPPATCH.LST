Dim Gap%(4)
Buf$=String$(32000,0)
Do
  Cls
  Print At(10,1);"LöCKEN NACH MASS"
  Print At(10,2);"Patchprogramm fÅr HYPERFORMAT V3.26"
  Print At(10,5);"Welche LÅcken patchen:"
  Print At(10,6);"FÅr Normal- oder Quick-Format (N/Q/eXit)?"
  Repeat
    A$=Upper$(Inkey$)
  Until A$="N" Or A$="Q" Or A$="X"
  Exit If A$="X"
  Clr Quick%
  If A$="Q"
    Quick%=5
  Endif
  Print At(10,8);"WÑhlen Sie in der folgenden Dateiauswahlbox"
  Print At(10,9);"eine HYPERFORMAT-Kopie aus, die Sie manipulieren"
  Print At(10,10);"wollen. ACHTUNG: Sicherheitskopie erstellen!"
  Void Inp(2)
  Fileselect "\HYP*.*","",Fi$
  Exit If Not Exist(Fi$)
  Open "I",#1,Fi$
  Laenge%=Lof(#1)
  Close #1
  Bload Fi$,Varptr(Buf$)
  Pos%=Instr(Buf$,"HYPER-GAPS")
  If Pos%=0
    Alert 1,"    Keine geeignete    |    HYPERFORMAT-Version!|    Da geht nichts!",1,"ôha",Erg%
  Else
    Pos%=Pos%+10
    Cls
    Print At(29,1);"G0  G1  G2  G3  G4";
    If Quick%
      Print " (Quick-Format)"
    Else
      Print " (Normal-Format)"
    Endif
    Print At(29,2);"------------------"
    For Sec%=9-9 To 21-9
      Print At(1,Sec%+3);"Gaps fÅr ";Sec%+9;"-Sektor-Format:"
      For Gap%=0 To 4
        Print At(28+Gap%*4,Sec%+3);
        Gap%(Gap%)=Asc(Mid$(Buf$,Pos%+Sec%*10+Quick%+Gap%,1))+1
        Print Using "###",Gap%(Gap%);
      Next Gap%
      Bps%=Gap%(1)+4+6+Gap%(2)+Gap%(3)+4+512+2+Gap%(4)
      Bpt%=(Sec%+9)*Bps%+Gap%(0)
      Print " (";Bps%;" Bps, ";Bpt%;" Bpt)"
    Next Sec%
    Print At(1,18);"Welches Format mîchten Sie verÑndern (9-21)";
    Input A$
    If A$<>""
      Sec%=Val(A$)
      Print At(1,19);"Gap 0-4";
      Input A$
      If A$<>""
        Gap%=Val(A$)
        Print At(1,20);Sec%;"-Sektor-Format, Gap ";Gap%
        Print At(1,21);"Alter Wert: ";Asc(Mid$(Buf$,Pos%+(Sec%-9)*10+Quick%+Gap%,1))+1
        Print At(1,22);"Neuer Wert";
        Input A$
        If Val(A$)
          Newgap%=Val(A$)
          Mid$(Buf$,Pos%+(Sec%-9)*10+Quick%+Gap%,1)=Chr$(Newgap%-1)
          Print At(1,24);"Modifizierte HYPERFORMAT-Version abspeichern (J/N)?"
          Repeat
            A$=Upper$(Inkey$)
          Until A$="J" Or A$="N"
          If A$="J"
            Fileselect "\HYP*.*","",Fo$
            If Fo$<>""
              Open "O",#1,Fo$
              Print #1,Left$(Buf$,Laenge%);
              Close #1
            Endif
          Endif
        Endif
      Endif
    Endif
  Endif
Loop
