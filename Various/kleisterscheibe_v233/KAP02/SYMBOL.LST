' Analysiert Symbol- und Relo-Tabelle einer Datei
' Ω1987-1990 Claus Brod, Am Felsenkeller 2, D-8772 Marktheidenfeld
'
DIM typen$(7)
FOR t%=0 TO 7
  READ typen$(t%)
NEXT t%
DATA bss-based relocatable,text-based relocatable
DATA data-based relocatable,external
DATA equated register,global
DATA equated,defined
'
DO
  CLS
  PRINT AT(15,1);"         ANALYSE DER SYMBOLTABELLE"
  PRINT AT(15,2);"       Written & Ω1987 by Claus Brod"
  PRINT AT(15,3);"SCHEIBENKLEISTER - das etwas andere Floppybuch"
  PRINT
  FILESELECT "\*.PRG","",fi$
  EXIT IF fi$=""
  PRINT "Ausgabe auf Drucker oder Bildschirm (D/B)?"
  IF @getkey("DB")=ASC("D")
    OPEN "O",#2,"prn:"
  ELSE
    OPEN "O",#2,"con:"
  ENDIF
  OPEN "I",#1,fi$
  SEEK #1,2
  tx%=CVL(INPUT$(4,#1))
  dt%=CVL(INPUT$(4,#1))
  bss%=CVL(INPUT$(4,#1))
  sym%=CVL(INPUT$(4,#1))
  PRINT #2,"Dateiname             :";fi$
  PRINT #2,"Textsegment - LÑnge   :";tx%
  PRINT #2,"Datensegment - LÑnge  :";dt%
  PRINT #2,"BS-Segment - LÑnge    :";bss%
  PRINT #2,"Symboltabelle - LÑnge :";sym%
  symstart%=28+tx%+dt%
  symend%=symstart%+sym%
  PRINT #2,"Symboltabelle - Start :";symstart%
  PRINT #2,"Symboltabelle - Ende  :";symend%
  PRINT "Symbole ausgeben (j/n)?"
  IF @getkey("JN")=ASC("J")
    IF sym%
      SEEK #1,symstart%
      PRINT #2
      FOR i%=symstart% TO symend%-1 STEP 14
        n$=INPUT$(8,#1)
        PRINT #2,"Symbolname:";n$
        typ%=CVI(INPUT$(2,#1))
        PRINT #2,TAB(7);"Typ: $";HEX$(typ%);
        @analyze_type(typ%)
        v=CVL(INPUT$(4,#1))
        PRINT #2,TAB(7);"Wert: $";
        IF v<2147483648
          PRINT #2,HEX$(v);
        ELSE
          PRINT #2,"-";HEX$(ABS(v-2^32));
        ENDIF
        PRINT #2,", dez. ";v
        PRINT #2
        IF INKEY$<>""
          REPEAT
            a$=INKEY$
          UNTIL a$<>""
        ENDIF
        EXIT IF UPPER$(a$)="X"
      NEXT i%
    ENDIF
  ENDIF
  PRINT #2
  PRINT "Relozierdaten ausgeben (j/n)?"
  IF ASC("J")=@getkey("JN")
    SEEK #1,symend%
    l1%=CVL(INPUT$(4,#1))
    IF l1%=0
      PRINT #2,"Keine Reloziertabelle"
    ELSE
      PRINT #2,"Erste Relozier-Adresse: $";HEX$(l1%)
      WHILE (NOT EOF(#1))
        CLR cn%
        DO
          l%=ASC(INPUT$(1,#1))
          EXIT IF l%<>1
          INC cn%
        LOOP
        l1%=l1%+cn%*254+l%
        EXIT IF l%=0
        PRINT #2,"nÑchste Adresse $";HEX$(l1%)
        IF INKEY$<>""
          VOID INP(2)
        ENDIF
      WEND
    ENDIF
  ENDIF
  PRINT "Taste drÅcken"
  VOID INP(2)
  CLOSE #1
  CLOSE #2
LOOP
'
FUNCTION getkey(b$)
  LOCAL a$
  REPEAT
    a$=UPPER$(INPUT$(1))
  UNTIL INSTR(b$,a$)
  RETURN ASC(a$)
ENDFUNC
'
PROCEDURE analyze_type(a%)
  LOCAL a$,t%
  a$="("
  FOR t%=0 TO 7
    IF (a% AND (256*2^t%))
      IF a$<>"("
        a$=a$+","+typen$(t%)
      ELSE
        a$=a$+typen$(t%)
      ENDIF
    ENDIF
  NEXT t%
  a$=a$+")"
  PRINT #2,'a$
RETURN
