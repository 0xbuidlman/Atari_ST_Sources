' MAKEDATA
' Konvertiert PRG-File zum LST-File, das
' mit MERGE eingeladen werden kann
' Written 1987 by Claus Brod+Stepper Anton
'
Res%=Xbios(4)           ! GETREZ
Zh%=8*Res%              ! Zeichenh”he
E1%=145                 ! Linker Rand
E2%=65*Res%             ! Oberer Rand
E3%=E1%+360             ! Links + Breite
E4%=E2%+7*Zh%           ! Oben + H”he
L$=String$(35,32)
@Screen
'
Do
  Alert 0," | MAKEDATA : | Datei in DATA-Zeilen wandeln  | ",1,"Los|Raus",Erg%
  Exit If Erg%=2
  @Do_it
  @Screen
Loop
Edit
'
Procedure Do_it
  Fileselect "\*.*","",Fi$
  If Fi$<>"" And Right$(Fi$)<>"\"
    Do
      Open "I",#1,Fi$
      G%=Lof(#1)
      Close #1
      Dim A%(G%/2)
      S%=Varptr(A%(0))
      Print At(2,5);"Reading File  ";Fi$
      Bload Fi$,S%
      '
      @Eingabe("Ab Byte ....",Str$(28),6)
      Exit If A$=""
      Ab%=Val(A$)
      @Eingabe("Anzahl der Bytes",Str$(G%-Ab%),7)
      Exit If A$=""
      G%=Val(A$)
      '
      A%=Instr(Fi$,".")
      If A%
        Fo$=Left$(Fi$,A%)+"LST"
      Else
        Fo$=Fi$+".LST"
      Endif
      Erg%=1
      If Exist(Fo$)=True
        Alert 1," Datei existiert bereits !",1,"Weiter|Abbruch",Erg%
      Endif
      If Erg%=1
        Print At(2,6);"Creating File ";Fo$
        Open "O",#1,Fo$
        P$="DATA "
        For T%=Ab% To Ab%+G%+16 Step 4
          P$=P$+Hex$(Lpeek(T%+S%))+","
          If Len(P$)>70
            P$=Left$(P$,Len(P$)-1)
            Print #1,P$
            P$="DATA "
          Endif
        Next T%
        P$=Left$(P$,Len(P$)-1)
        Print #1,P$
        Close #1
      Endif
      Exit If 1
    Loop
  Endif
Return
'
Procedure Eingabe(Txt$,Ta$,Laenge%)
  Print Coff$;
  Get E1%,E2%,E3%,E4%,Egf$
  Deffill 1,2,8
  Pbox E1%+5,E2%+5*Res%,E3%,E4%
  Deffill 1,0
  Pbox E1%,E2%,E3%-5,E4%-5*Res%
  Deffill 1,1
  Print At(22,10);Txt$
  Print At(22,13);String$(Laenge%,"-")
  Print At(22,12);
  Form Input Laenge% As Ta$
  Put E1%,E2%,Egf$
  A$=Ta$
Return
'
Procedure Screen
  Deffill 1,2,4
  Pbox 0,0,639,399
  Print At(1,1);Chr$(27);"p";L$;" MAKEDATA ";L$;Chr$(27);"q"
Return
